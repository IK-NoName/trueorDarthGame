doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    meta(name="viewport",  content="width=device-width, initial-scale=1")
  body
    script(src='javascripts/index.js', type='module')
    block content

    
    div(class='container')
      h1(class='title') Liste des joueurs
      input(class='player' placeholder='Enter a name here')

    div(class='game hide')

    button(class='addPlayer')
      p Ajouter une question
    
    button(class="play")
      p Play

    div(class = 'form hide')
      p(class='cross') X
      div(class='formContainer')
        textarea(class="formQuestion" placeholder='Enter a question here')
        div(class='checkboxContainer')
          h3 Action : 
          input(type='checkbox' class='truthOrDare')
        button(class="formButton")
          p Ajouter une question

    div(class='choice hide')

    button(class='openForm')
      p Ajouter une question